<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Model</th>
      <th>Year</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.name %></td>
        <td><%= car.model %></td>
        <td><%= car.year %></td>
        
        <td><%= link_to 'Show', car %></td>
        <% if user_signed_in?%>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <%  end %>
        </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="btn-group" role="group" aria-label="Basic example">
<%= link_to 'New Car', new_car_path , :class => "btn btn-warning" %>
<%if user_signed_in?%>
<%= link_to 'sing_Out',destroy_user_session_path(current_user) ,method: :delete,:class => "btn btn-warning"%>
<%else%>
<%=link_to 'sign in',new_user_session_path, :class => "btn btn-warning"%>
<%end%>
</div>
